/* components/move-menu/move-menu.wxss */

.movable-view {
  pointer-events: auto;
}

.movable-area {
  pointer-events: none;
}

.menuarea {
  position: fixed;
  left: .0rpx;
  right: .0rpx;
  top: .0rpx;
  bottom: .0rpx;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  height: calc(100% - 48px - 100rpx - env(safe-area-inset-bottom));
  width: calc(100% - 100rpx);
}

.menuarea .sub_menus {
  position: absolute;
  bottom: 40rpx;
}

.sub_menus .menu_main {
  margin: 8rpx 0;
}

.menu_box {
  position: fixed;
  bottom: 150rpx;
  right: 30rpx;
  /* background-color: red; */
  text-align: center;
}

.menu_main {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  background-color: #202737;
  color: #fff;
  box-shadow: 0px 3px 10px rgba(0, 216, 221, .3);
}

.menu_img {
  margin-top: 10rpx;
  width: 50rpx;
  height: 50rpx;
  /* background-color: red; */
}

.menu_title {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #bbb;
}