/* pages/feedback/index.wxss */

.feedback-content {
  border: 1px solid #aaa;
  background-color: #fff;
  border-radius: 24rpx;
  width: calc(100% - 80rpx);
  margin: 40rpx;
  padding: 24rpx;
  box-sizing: border-box;
  color: #333;
  height: 400rpx;
}

.feedback-button {
  width: calc(100% - 80rpx);
  margin: 0 40rpx;
}